<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChitietlaptopActivity"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:background="#d2d1d1"
        app:title="Chi Tiết Sản Phẩm"
        android:id="@+id/ctsp_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_ctsp"
            android:src="@drawable/error"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="250dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/ctsp_ten"
                android:textStyle="bold"
                android:textColor="#111"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:text="@string/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/ctsp_gia"
                android:textStyle="bold"
                android:textColor="#111"
                android:textSize="20sp"
                android:text="@string/GiaSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </LinearLayout>
            <Spinner
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:background="@drawable/spinner"
                android:textAlignment="center"
                android:id="@+id/ctsp_soluong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>

            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/ctsp_themgiohang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner"
                android:text="@string/namedull"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="5dp"

                android:textSize="20sp"
                android:paddingBottom="10dp"
                android:id="@+id/ctsp_scrollview_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>